<p id="notice"><%= notice %></p>

<h1>Hookah Creations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<% @hookahs.each do |hookah| %>
    	<tr>
    		<td><%= hookah.title %></td>
    		<td><%= hookah.description %></td>
    		<td><%= pluralize(hookah.votes.count, "vote") %></td>
        <td><%= button_to '+1', upvote_hookah_path(hookah), method: :post %></td>
        <td><%= link_to 'Delete', hookah, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hookah', new_hookah_path %>
